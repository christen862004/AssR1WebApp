@model List<Department>
@{
    Layout = "_AdvLayout";
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a href="/Department/New" class="btn btn-success">New</a>

<table class="table table-hover table-bordered">
    <tr>
        <td>ID</td>
        <td>Name</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
    }
</table>