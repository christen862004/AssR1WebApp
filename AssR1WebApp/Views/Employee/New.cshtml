@model Employee
@{
    ViewData["Title"] = "New";
    SelectList DeptOptions = new SelectList(ViewBag.DeptList,"Id","Name");
}

<h1>New</h1>
<form method="post" asp-action="SaveNew" asp-controller="Employee" >
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Address"></label>
        <input class="form form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="ImageURl"></label>
        <input class="form form-control" asp-for="ImageURl" />
        <span asp-validation-for="ImageURl" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        <select class="form form-control" asp-for="DepartmentId" asp-items="DeptOptions">
            <option value="0" >-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>

    </div>
    <input type="submit" value="Create" class="btn btn-success" />

</form>
<a asp-action="Index">Back To List</a>


<!--ValidationClient Side-->
<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>









