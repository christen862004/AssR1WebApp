@model EmployeeWithDeptListViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" action="/Employee/SaveEdit/@Model.Id">
    @* <input type="hidden" name="Id" value="@Model.Id" />     *@
    <div>
        <label>Name</label>
        <input type="text" class="form form-control" name="Name" id="Name" value="@Model.Name" />
    </div>
    <div>
        <label>Address</label>
        <input type="text" class="form form-control" name="Address" id="Address" value="@Model.Address" />
    </div>
    <div>
        <label>Salary</label>
        <input type="number" class="form form-control" name="Salary" id="Salary" value="@Model.Salary" />
    </div>
    <div>
        <label>Profile Image</label>
        <input type="text" class="form form-control" name="ImageURl" id="ImageURl" value="@Model.ImageURl" />
    </div>
    <div>
        <label>Department</label>
        @* <input type="number" class="form form-control" name="DepartmentId" id="DepartmentId" value="@Model.DepartmentId" /> *@
        <select class="form form-control" name="DepartmentId" id="DepartmentId">
            @foreach (var deptItem in Model.DepartmentList)
            {
                if (Model.DepartmentId == deptItem.Id)
                {
                    <option value="@deptItem.Id" selected>@deptItem.Name</option>
                }
                else
                {
                    <option value="@deptItem.Id" >@deptItem.Name</option>

                }
            }
        </select>
    </div>

    <input type="submit" value="Save" class="btn btn-success" />
</form>
<a href="/Employee/index">back To List</a>

