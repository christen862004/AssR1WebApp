@model List<Employee>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="New" asp-controller="Employee" class="btn btn-primary">New</a>
<h1>Index</h1>
<table class="table table-hover">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td></td>
        @* <td>Dept Name</td> *@
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            @* <td>@item.Department.Name</td> *@
            <td>
                <a href="/Employee/Edit/@item.Id">Edit</a>
            </td>
        </tr>
    }
</table>
