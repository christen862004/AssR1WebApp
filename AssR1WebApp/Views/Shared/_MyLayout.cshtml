<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div style="background-color:aqua;font-size:30px;padding:20px;height:100px">
        Header
        <div style="background-color:burlywood;">
            @RenderSection("HeadSection")
        </div>
    </div>
    <div style="background-color:burlywood;" >
        @RenderBody()
    </div>
    <div style="background-color:aqua;font-size:20px;padding:20px;height:50px">
        Footer
        <div style="background-color:burlywood;">
            @RenderSection("FooterSection",false)
        </div>
    </div>
</body>
</html>
